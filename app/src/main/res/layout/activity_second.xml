<?xml version="1.0" encoding="utf-8"?>
<android.support.design.circularreveal.CircularRevealFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDarkColor"
    tools:context=".SecondActivity"
    android:id="@+id/layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="9">

        <TextView
            android:textSize="20sp"
            android:paddingTop="20dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/colorWhite"
            android:background="@color/primaryColor"
            android:onClick="TextViewClick"
            android:layout_weight="7"
            android:layout_margin="10dp"
            android:id="@+id/tw_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="TextView"
            />

        <Button
            android:id="@+id/button2"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:background="@color/buttonColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:onClick="Translate"
            android:text="ÇEVİR" />


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        app:backgroundTint="@color/fabBackground"
        android:src="@drawable/baseline_translate_white_18dp"
        android:onClick="FloatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/floating_button"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="25dp"
        android:layout_gravity="end|bottom"
        />

</android.support.design.circularreveal.CircularRevealFrameLayout>